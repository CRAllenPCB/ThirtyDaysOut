<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:background="@color/colorPrimary"

    >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:id="@+id/wTVDays"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        android:layout_gravity="fill_horizontal"
        android:gravity="bottom|center_horizontal"


        android:text="24"
        android:textSize="24sp"
        android:textColor="#000000"

        android:background="@color/colorPrimary"


        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:id="@+id/wTVDaysOut"

        android:gravity="top|center_horizontal"
        android:paddingTop="5sp"
        android:paddingBottom="10dp"
        android:text="@string/widget_tvDaysOut"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@color/colorPrimary"

        android:layout_below="@+id/wTVDays"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"


        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:text="Wednesday\n, October 5, 2016"
        android:maxLines="2"
        android:lines="2"
        android:textSize="12sp"
        android:textColor="#000000"

        android:id="@+id/wTVResult"

        android:gravity="center"



        android:background="#ffffff"




        android:layout_toRightOf="@id/wTVDays"

        />


</RelativeLayout>
